/* ==================== CONTROL PANELS ==================== */

/* Standard Controls Panel - Compact Horizontal Layout */
.controls-panel,
.simulation-controls,
.control-panel,
.gear-controls {
    background-color: #f9f9f9;
    border-radius: 8px;
    padding: 12px 15px;
    margin: 15px 0;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    display: flex;
    flex-wrap: nowrap;
    gap: 15px 20px;
    align-items: flex-start;
    flex-direction: column;
}

/* Control rows - inline horizontal layout */
.controls-panel .control-row,
.controls-panel .slider-row,
.controls-panel .slider-container,
.simulation-controls .control-row,
.simulation-controls .slider-row,
.simulation-controls .slider-container,
.control-panel .control-row,
.control-panel .slider-row,
.control-panel .slider-container,
.gear-controls .control-row,
.gear-controls .slider-row,
.gear-controls .slider-container {
    display: flex;
    align-items: center;
    gap: 8px;
    flex: 0 1 auto;
    min-width: 0;
    margin-bottom: 0;
}

/* Labels inline with controls */
.controls-panel label,
.simulation-controls label,
.control-panel label,
.gear-controls label {
    font-size: 13px;
    font-weight: 500;
    margin-bottom: 0;
    white-space: nowrap;
    flex-shrink: 0;
}

/* Sliders with compact width for standard inline layouts */
.controls-panel input[type="range"],
.simulation-controls input[type="range"],
.control-panel input[type="range"],
.gear-controls input[type="range"] {
    width: 120px;
    flex-shrink: 0;
}

/* Override for sliders inside grid layouts - make them flexible and responsive */
.controls-panel [style*="display:grid"] .slider-container input[type="range"],
.controls-panel [style*="display: grid"] .slider-container input[type="range"],
.simulation-controls [style*="display:grid"] .slider-container input[type="range"],
.simulation-controls [style*="display: grid"] .slider-container input[type="range"],
.control-panel [style*="display:grid"] .slider-container input[type="range"],
.control-panel [style*="display: grid"] .slider-container input[type="range"],
.gear-controls [style*="display:grid"] .slider-container input[type="range"],
.gear-controls [style*="display: grid"] .slider-container input[type="range"] {
    width: 100% !important;
    min-width: 100px; /* Increased from 80px to accommodate labels and values */
    flex-shrink: 1;
}

/* Value display spans */
.controls-panel span,
.simulation-controls span,
.control-panel span,
.gear-controls span {
